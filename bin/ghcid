#!/usr/bin/env bash

case "$1" in
  b|backend) package="backend"  ;;
  *)         package="frontend" ;;
esac

echo -ne '\033]0;'"$package ghcid"'\007'

case "$package" in
  backend) paths="-icommon/src -ibackend/src -ibackend/app" ;;
  frontend) paths="-icommon/src -ifrontend/src" ;;
esac

nix-shell default.nix -A shells.ghc --run "ghcid -W --restart=$package/$package.cabal -c'ghci -O0 -Wall -XNoNondecreasingIndentation $paths Main'"
